 
pipeline {
 
  agent {
    node {
      label 'master'
    }
  }
    // 拉取代码
  stages {
    stage('GetCode') {
      steps {
        sleep 5
      }
    }
 
    // 代码打包
    stage('Maven Build') {
        steps {
          sh '''
          #export JAVA_HOME==/usr/local/jdk
          cd /var/lib/jenkins/workspace/testplat
          /opt/app/maven/bin/mvn clean install -Ptest
          '''
          println('部署完成！')
        }
    }
  }
}
